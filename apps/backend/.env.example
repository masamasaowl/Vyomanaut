# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (example format)
# e.g., postgresql://user:pass@host:5432/dbname
DATABASE_URL="postgresql://vyomanaut:POSTGRES_PASSWORD_HERE@localhost:5432/vyomanaut?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
# leave empty if no password
REDIS_PASSWORD=

# JWT Auth
# Replace with a long random secret (minimum 32 chars).
# You can generate one with openssl or node (commands below).
JWT_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET
JWT_EXPIRES_IN=7d


# Encryption (CRITICAL - Keep secure!)
MASTER_KEK=REPLACE_WITH_64bit_SECRET

# File Processing
REDUNDANCY_FACTOR=3
CHUNK_SIZE_MB=500           // For medium files
MIN_DEVICE_STORAGE_GB=1     // New requirement
MAX_FILE_SIZE_GB=50         // Can handle bigger files now!

# WebSocket (ms)
WS_PING_INTERVAL=60000
WS_PING_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pricing (per GB per hour)
STORAGE_RATE_PER_GB_HOUR=0.0001