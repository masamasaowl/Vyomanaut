# Test Environment Configuration
# This overrides .env during tests
# We had lot many postgres issues while running tests using the Docker instance so we now run it locally instead

NODE_ENV=test
PORT=3001
HOST=0.0.0.0

# Test Database (separate from development!)
DATABASE_URL="postgresql://postgres:password@localhost:5432/vyomanaut_test?schema=public"

# Redis (can use same instance, different DB)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (test key)
JWT_SECRET=test-jwt-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=1d

# Encryption (test KEK)
MASTER_KEK=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# File Processing
CHUNK_SIZE_MB=5
REDUNDANCY_FACTOR=3
MAX_FILE_SIZE_GB=10

# WebSocket
WS_PING_INTERVAL=60000
WS_PING_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Storage Pricing
STORAGE_RATE_PER_GB_HOUR=0.0001